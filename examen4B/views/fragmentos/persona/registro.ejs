<script src="/js/utilidades.js"></script>
<script>
    $(function () {
        verificar();
        $("#fecha_nac").change(function () {
            var edad = calcularEdad($("#fecha_nac").val());
            $("#edad").val(edad);
        });
    });

</script>
<center>
<div class="col-lg-7 text-center aos-init aos-animate" data-aos="fade-up" data-aos-delay="">
    <form action="/cliente/registrate" method="post" class="form-box" id="formulario">
        <% if(typeof msg != 'undefined') {%>
        <% if(typeof msg.error != 'undefined' && msg.error.length > 0) { %>    
        <div class="form-group">
            <div class="alert alert-danger" style="font-size: 12px">
                <%= msg.error %>
            </div>                        
        </div>                  
        <% } %>
        <% if(typeof msg.info != 'undefined' && msg.info.length > 0) { %>    
        <div class="form-group">
            <div class="alert alert-success" style="font-size: 12px">
                <%= msg.info %>
            </div>                        
        </div>                  
        <% } %>
        <% } %>
        <h3 class="h4 text-black mb-4"><%= title %></h3>
        <small id="cedulaHelp" class="form-row text-muted">DATOS DE LA PERSONA</small>
        <div class="form-group">
            <input type="text" class="form-control" id="cedula" name="cedula" placeholder="Numero de cedula">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="pasaporte" name="pasaporte" placeholder="Numero de Pasaporte">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="nacionalidad" name="nacionalidad" placeholder="Nacionalidad">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="apellidos" name="apellidos" placeholder="Apellidos">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="nombres" name="nombres" placeholder="Nombres">
        </div>
        <div class="form-group mb-4">
            <small id="cedulaHelp" class="form-text text-muted">Seleccione su feha de nacimiento.</small>
            <input type="date" class="form-control" id="fecha_nac" name="fecha_nac" >
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="edad" name="edad" placeholder="Edad" readonly>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-pill" value="Registrate">
            <a href="/" class="btn btn-danger btn-pill">Volver</a>
           
        </div>
    </form>
</div>
</center>
